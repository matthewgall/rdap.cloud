{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2022"],
        "types": ["@types/node"],
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "modules/**/*", "worker-configuration.d.ts"],
    "exclude": ["node_modules"]
}
